# map_test.kuki
# Testing if Map can support different input/output types

import "stdlib/slice"
import "stdlib/cast"

func main()
    numbers := list of int{1, 2, 3}
    # Current Map implementation only supports any -> any (T -> T)
    # Let's see if we can define a multi-type Map
    
    # We'll use a local version to test the signature
    strings := numbers |> MyMap(func(n int) string
        return "num_{n}"
    )
    
    print(strings)

func MyMap(items list of any, transform func(any) any2) list of any2
    result := make(list of any2, len(items))
    for i, item in items
        result[i] = transform(item)
    return result
