# Tests for Kukicha Standard Library - Retry Package

petiole retry_test

import "stdlib/retry"
import "testing"

# Test retry.New and Delay configuration
func TestRetryConfiguration(t reference testing.T)
    cfg := retry.New()
    # verify config can be created and methods can be called
    cfg = retry.Delay(cfg, 100)
    cfg = retry.Attempts(cfg, 5)
    # Configuration created successfully (no panic = success)
    t.Logf("Retry config created with Delay and Attempts")

# Test retry with linear strategy
func TestRetryWithLinear(t reference testing.T)
    cfg := retry.New()
    cfg = retry.Delay(cfg, 250)
    cfg = retry.Linear(cfg)
    # Config created successfully with linear strategy (no panic = success)
    t.Logf("Retry config created with linear strategy")
